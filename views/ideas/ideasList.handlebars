<!-- This file is for the ideas list body-->
{{#each ideas}}
  <div class="card card-body mb-3">
      <h4>{{title}}</h4>
      <p>{{details}}</p>
         <!--Edit idea-->
         <a class="btn btn-block btn-dark mb-2" href="/ideas/edit/{{id}}"> Edit </a>
         <!--Delete idea-->
         <form class="" action="/ideas/{{id}}?_method=DELETE" method="post">
             <input type="hidden" name="_method" value="DELETE">
             <input type="submit" class="btn btn-block btn-danger" value="Delete"></input>
         </form>
  </div>
{{else}}
  <h6 class="mt-4">No ideas listed. <a class="card-link" href="/ideas/add">Click here to add an idea</a>.</h6>
{{/each}}
